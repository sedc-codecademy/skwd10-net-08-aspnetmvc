@model List<Author>


<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Date of birth</th>
    </tr>
  </thead>
  <tbody>
        @foreach (var author in @Model)
        {
            <tr>
              <td>@author.Id</td>
              <td>@author.FirstName</td>
              <td>@author.LastName</td>
              <td>@author.DateOfBirth.ToString("dd.MM.yyyy")</td>
            </tr>
        }
  </tbody>
</table>
