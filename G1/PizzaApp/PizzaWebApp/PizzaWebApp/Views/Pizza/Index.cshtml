@model List<PizzaViewModel>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {            
            <tr>
              <th scope="row">@Model[i].Id</th>
              <td>@Model[i].Name</td>
              <td>@Model[i].Description</td>
              <td><a asp-action="Details" asp-route-id="@Model[i].Id" class="btn btn-primary">Details</a></td>
            </tr>
        }
      </tbody>
    </table>