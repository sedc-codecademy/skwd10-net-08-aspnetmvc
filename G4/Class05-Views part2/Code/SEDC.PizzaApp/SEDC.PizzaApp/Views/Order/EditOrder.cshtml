@using SEDC.PizzaApp.Models.Enums
@model OrderViewModel

<h2>Edit order</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrderPost" method="post">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="PizzaName" class="control-label"></label>
                <input asp-for="PizzaName" class="form-control"/>
            </div>
             <div class="form-group">
                <label asp-for="Delivered" class="control-label"></label>
                <input asp-for="Delivered" type="checkbox" />
            </div>
             <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
               <select class="form-control" asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
               <select class="form-control" asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users, "Id", "UserFullname"))"></select>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>