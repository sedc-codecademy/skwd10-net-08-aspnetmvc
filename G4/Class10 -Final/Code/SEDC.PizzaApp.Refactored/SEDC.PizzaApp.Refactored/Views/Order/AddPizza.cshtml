@model AddPizzaViewModel

<h2>Add Pizza:</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPizzaPost" method="post">
            <input type="hidden" asp-for="OrderId"/>
            <div class="form-group">
                <label asp-for="PizzaId" class="control-label"></label>
               <select class="form-control" asp-for="PizzaId" asp-items="@(new SelectList(ViewBag.Pizzas, "Id", "Name"))"></select>
            </div>
             <div class="form-group">
                <label asp-for="PizzaSize" class="control-label"></label>
               <select class="form-control" asp-for="PizzaSize" asp-items="Html.GetEnumSelectList<PizzaSize>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPizzas" class="control-label"></label>
                <input asp-for="NumberOfPizzas" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
</div>
