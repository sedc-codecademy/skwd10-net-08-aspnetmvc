@{
}
@Html.ActionLink("Link", "Create", "Pizza");
<a asp-controller="Pizza" asp-action="Create" asp-route-id="" asp-route-test="">Link</a>

<a href="/Pizza/Create/">Link</a>

<form asp-controller="Pizza" asp-action="Create" method="post">
    <div class="row">
        <label>
            Pizza name
            <input name="name" type="text"/>
        </label>
    </div>
    <div class="row">
    <label>
        Price
        <input name="price" type="number" />
    </label>
    </div>
    <div class="row">
    <label>
        Size
        <select name="Size" asp-items="(ViewBag.pizzaSize as IEnumerable<PizzaSize>).Select(x => new SelectListItem(x.ToString(), x.ToString()))">
        </select>
    </label>
    </div>

    <button type="submit">Create</button>
</form>
